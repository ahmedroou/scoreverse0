rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down user data: only the authenticated user can access their own documents.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public, read-only access to the shared data.
    match /public_shares/{shareId} {
      allow read: if true;
      allow write: if false; // No one can write to this collection from the client.
    }
  }
}
