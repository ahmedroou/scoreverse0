
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User data is private, except for admins.
    match /users/{userId} {
      // Any authenticated user can create their own user document.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // A user can update their own document.
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // A user can get their own document. Admins can get any user document.
      allow get: if request.auth != null && 
        (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      
      // Admins can list all user documents.
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // Admins can delete other users.
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // A user's subcollections (games, players, etc.) are private to them.
    // Admins are also allowed to read/write for management purposes.
    match /users/{userId}/{collection}/{docId} {
      allow read, write, delete: if request.auth != null && 
        (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    
    // Public share data can be read by anyone, but only written by the owner.
    match /public_shares/{shareId} {
      allow get: if true;
      allow write: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
  }
}
